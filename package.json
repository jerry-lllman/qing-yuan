{
  "name": "cyan",
  "version": "0.1.0",
  "private": true,
  "description": "多端即时通讯应用 - 支持 iOS、Android、PC",
  "keywords": [
    "im",
    "instant-messaging",
    "electron",
    "react-native",
    "monorepo"
  ],
  "license": "MIT",
  "author": "Cyan Team",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "clean": "turbo clean && rm -rf node_modules",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "@cyan/eslint-config": "workspace:*",
    "@cyan/prettier-config": "workspace:*",
    "@cyan/typescript-config": "workspace:*",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.14.4",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
